@using System.Data;
@using b2b_solution.Models
@{ 
    DataModel dm = new DataModel();
    DataTable dx = dm.loadList("SelCompany", "sp_B2B_Company");
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>DIGITS - B2B Portal</title>

    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta property="og:title" content="" />
    <meta property="og:type" content="" />
    <meta property="og:url" content="" />
    <meta property="og:image" content="" />
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="../content/imgs/theme/favicon.png" />
    <!-- Template CSS -->

    <link rel="stylesheet" href="../Content/css/plugins/animate.min.css" />
    <link rel="stylesheet" href="../Content/css/main.css" />
