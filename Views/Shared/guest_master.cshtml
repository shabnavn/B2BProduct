    <script src="../Kendo/js/kendo.all.min.js"></script>
    <script src="../Kendo/js/kendo.aspnetmvc.min.js"></script>

   


</head>

<body>


    <header class="header-area header-style-1 header-height-2">

        <div class="header-top header-top-ptb-1 d-none d-lg-block">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-xl-3 col-lg-4">
                        <div class="header-info">
                            <ul>
                                <li><a href="/Landing/About">About Us</a></li>
                                <li><a href="/Landing/login">My Account</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-4">
                        <div class="text-center">
                            <div id="news-flash" class="d-inline-block">
                                <ul hidden>
                                    <li>100% Secure delivery without contacting the courier</li>
                                    <li>Supper Value Deals - Save more with promotions</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-4">
                        <div class="header-info header-info-right">
                            <ul>
                                <li>Need help? Call Us: &nbsp; <strong class="text-brand"> <a href="tel:@dx.Rows[0]["com_HelpLineNumber"].ToString()">@dx.Rows[0]["com_HelpLineNumber"].ToString()</a> </strong></li>

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="header-middle header-middle-ptb-1 d-none d-lg-block sticky-bar" style="padding:10px; border-bottom:none">
            <div class="container">
                <div class="header-wrap">
                    <div class="logo logo-width-1">
                        <a href="/Landing/Landing"><img src="@Url.Content(dx.Rows[0]["com_BrandLogo"].ToString())" alt="logo" style="height: 100px; width: 100px;"/></a>
                    </div>
                    <div class="header-right">
                        <div class="search-style-2">
                            <form action="javascript:SearchPrd(); " method="post" hidden>
                                @{
                                    DataTable dt = dm.loadList("SelCats", "sp_B2B_Home");
                                }

                                @(Html.Kendo().AutoComplete()
                                        .Name("prdSearch")
                                .DataTextField("itmName")
                                .Filter("contains")
                                .Placeholder("Find your products here...")
                                .MinLength(1)
                                .HtmlAttributes(new { style = "width:100%" })
                                .DataSource(source =>
                                        {
                                    source.Read(read =>
                                    {
                                        read.Action("GetProdNames", "Landing")
                                            .Data("onAdditionalData");
                                    })
                                    .ServerFiltering(true);
                                })
                                .Events(e =>
                            {
                                e.Select("onSelect");
                            })
                                 )

                            </form>
                        </div>
                        <div class="header-action-right">
                            <div class="header-action-2">

                                <a href="/Landing/Login" class="btn  mr-10 mb-sm-15"><i class="fi-rs-user mr-10"></i>Sign In</a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="header-bottom header-bottom-bg-color sticky-bar">
            <div class="container">
                <div class="header-wrap header-space-between position-relative">
                    <div class="logo logo-width-1 d-block d-lg-none">
                        <a href="index.html"><img src="../content/imgs/theme/logo.png" alt="logo" /></a>
                    </div>

                    <div class="header-nav d-none d-lg-flex">

                        <div class="main-menu main-menu-padding-1 main-menu-lh-2 d-none d-lg-block font-heading">
                            <nav>

                                <ul>

                                    @{
                                        int i = 0;
                                        foreach (DataRow dr in dt.Rows)
                                        {
                                            <li class="position-static " style="margin-top:.5%; line-height:30px; padding-left:0px; padding-right:0px">
                                                <a onclick="SearchPrd()" style=" display: grid ">

                                                    <img height="100" class="" src="@dr["img"]" style="justify-self:center; " />

                                                    @*  <span class="" style="font-size:13px"> @dr["Name"].ToString()</span>*@
                                                </a>
                                                <ul class="mega-menu" style="display:flex; justify-content:center; padding:0px !important">
                                                    <li class="col-lg-12 row">
                                                        @*<a class="menu-title" href="#">Fruit & Vegetables</a>*@
                                                        <div class="col-lg-6" style="padding-top:10px">
                                                            @{
                                                                string catDesc = dr["cat_desc"].ToString();
                                                                string finCat = catDesc.Replace("/", "/ ");
                                                                finCat = finCat.Replace("&", "& ");
                                                            }

                                                            <strong style="margin-bottom:5px; margin-top:5px"> @finCat</strong>
                                                        </div>
                                                        <div class="d-flex categori-dropdown-inner">


                                                            <ul style="display:flex; margin-top:5px !important" class="col-lg-12 row">



                                                                @{ try
                                                                    {
                                                                        DataTable dtBrands = dm.loadList("SelCatAllBrands", "sp_B2B_Guest", dr["id"].ToString());
                                                                        foreach (DataRow drB in dtBrands.Rows)
                                                                        {
                                                                            <li class="col-lg-2">
                                                                                <a onclick="SearchPrd()"
                                                                                   style="display:grid">   <img height="80" src="@drB["brd_Image"]" alt="@drB["brd_Name"]" /><span>@drB["brd_Name"]</span></a>
                                                                            </li>
                                                                        }
                                                                    }
                                                                    catch (Exception ex)
                                                                    {

                                                                    }
                                                                }
                                                            </ul>
                                                        </div>
                                                    </li>
                                                </ul>
                                            </li>
                                            i++;
                                        }
                                    }
                                </ul>
                            </nav>
                        </div>
                    </div>

                    <div class="hotline d-none d-lg-flex">
                        <img src="../content/imgs/theme/icons/icon-headphone.svg" alt="hotline" />
                        <p><a href="tel:@dx.Rows[0]["com_HelpLineNumber"].ToString()">@dx.Rows[0]["com_SupportCenter"].ToString()</a><span>@dx.Rows[0]["com_WorkingHours"].ToString()</span></p>
                    </div>

                    <div class="header-action-icon-2 d-block d-lg-none">
                        <div class="burger-icon burger-icon-white">
                            <span class="burger-icon-top"></span>
                            <span class="burger-icon-mid"></span>
                            <span class="burger-icon-bottom"></span>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </header>

    <div class="mobile-header-active mobile-header-wrapper-style">
        <div class="mobile-header-wrapper-inner">
            <div class="mobile-header-top">
                <div class="mobile-header-logo">
                    <a href="index.html"><img src="@dx.Rows[0]["com_BrandLogo"].ToString()" alt="logo" /></a>
                </div>
                <div class="mobile-menu-close close-style-wrap close-style-position-inherit">
                    <button class="close-style search-close">
                        <i class="icon-top"></i>
                        <i class="icon-bottom"></i>
                    </button>
                </div>
            </div>
            <div class="mobile-header-content-area">
                <div class="mobile-search search-style-3 mobile-header-border">
                    <form action="#">
                        <input type="text" placeholder="Search for items…" />
                        <button type="submit"><i class="fi-rs-search"></i></button>
                    </form>
                </div>
                <div class="mobile-menu-wrap mobile-header-border">
                    <!-- mobile menu start -->
                    <nav>
                        <ul class="mobile-menu font-heading">
                            <li>
                                <a class="active" href="Landing/Landing">Home </a>
                            </li>
                            <li>
                                <a href="/Landing/About">About</a>
                            </li>
                            <li>
                                <a href="/landing/Brands">Brands</a>
                            </li>

                            <li>
                                <a href="/Landing/Contact">Contact</a>
                            </li>
                        </ul>
                    </nav>
                    <!-- mobile menu end -->
                </div>
                <div class="mobile-header-info-wrap">
                    <div class="single-mobile-header-info">
                        <a href="/landing/Login"><i class="fi-rs-user"></i>Log In / Sign Up </a>
                    </div>
                    <div class="single-mobile-header-info">
                        <a href="tel:@dx.Rows[0]["com_SupportCenter"].ToString() "><i class="fi-rs-headphones"></i>@dx.Rows[0]["com_SupportCenter"].ToString() </a>
                    </div>
                </div>
                <div class="mobile-social-icon mb-50">
                    <h6 class="mb-15">Follow Us</h6>
                    <a href="@dx.Rows[0]["com_fbPage"].ToString()" target="_blank"><img src="../content/imgs/theme/icons/icon-facebook-white.svg" alt="" /></a>
                    @*<a href="@dx.Rows[0]["com_Twitter"].ToString()" target="_blank"><img src="../content/imgs/theme/icons/icon-twitter-white.svg" alt="" /></a>*@
                    <a href="@dx.Rows[0]["com_Instagram"].ToString()" target="_blank"><img src="../content/imgs/theme/icons/icon-instagram-white.svg" alt="" /></a>
                </div>
                <p class="font-sm mb-0">&copy; @DateTime.Now.ToString("yyyy"), Powered By <strong class="text-brand">DigiTS</strong>  <br />All rights reserved</p>
            </div>
        </div>
    </div>
    <!--End header-->
    @RenderBody()

    <footer class="main">



        <section class="section-padding footer-mid">
            <div class="container pt-15 pb-20">
                <div class="col-12 mb-30">
                    <div class="footer-bottom"></div>
                </div>
                <div class="row">
                    <div class="footer-link-widget col wow animate__ animate__fadeInUp animated">
                        <div class="widget-about font-md mb-md-3 mb-lg-3 mb-xl-0 wow animate__animated animate__fadeInUp" data-wow-delay="0">
                            <div class="logo ">
                                <a href="index.html" class=""><img src="@dx.Rows[0]["com_BrandLogo"].ToString()" alt="logo" /></a>
                                @*<p class="font-lg text-heading">We offer you great service</p>*@
                            </div>
                            <ul class="contact-infor">
                                <li><span style="display:grid">@Html.Raw(HttpUtility.HtmlDecode(dx.Rows[0]["com_Address"].ToString())) </span></li>
                                @*  <li><img src="../content/imgs/theme/icons/icon-contact.svg" alt="" /><strong>Call Us:</strong><span><a href="tel:@dx.Rows[0]["com_SupportCenter"].ToString()">@dx.Rows[0]["com_SupportCenter"].ToString()</a></span></li>*@
